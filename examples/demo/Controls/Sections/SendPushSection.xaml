<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OneSignalDemo.Controls.Sections.SendPushSection">

    <VerticalStackLayout Spacing="8">
        <Grid ColumnDefinitions="*,Auto" Padding="4,0,0,0">
            <Label Grid.Column="0" Text="SEND PUSH NOTIFICATION" Style="{StaticResource SectionHeaderStyle}" VerticalOptions="Center" />
            <ImageButton Grid.Column="1" Source="info" WidthRequest="20" HeightRequest="20"
                         BackgroundColor="Transparent" Clicked="OnInfoTapped" Padding="4" />
        </Grid>

        <Button Text="SIMPLE" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnSimpleClicked" AutomationId="send_simple_push_button" />
        <Button Text="WITH IMAGE" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnWithImageClicked" AutomationId="send_image_push_button" />
        <Button Text="CUSTOM" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnCustomClicked" AutomationId="send_custom_push_button" />
    </VerticalStackLayout>
</ContentView>
