<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OneSignalDemo.Controls.Sections.SmsSection">

    <VerticalStackLayout Spacing="8">
        <Grid ColumnDefinitions="*,Auto" Padding="4,0,0,0">
            <Label Grid.Column="0" Text="SMS" Style="{StaticResource SectionHeaderStyle}" VerticalOptions="Center" />
            <ImageButton Grid.Column="1" Source="info" WidthRequest="20" HeightRequest="20"
                         BackgroundColor="Transparent" Clicked="OnInfoTapped" Padding="4" />
        </Grid>

        <Border Style="{StaticResource CardBorderStyle}">
            <VerticalStackLayout x:Name="SmsListContainer" MinimumHeightRequest="50">
                <Label x:Name="EmptyLabel" Text="No SMS added" Style="{StaticResource EmptyStateStyle}"
                       Padding="16" AutomationId="sms_empty_label" />
            </VerticalStackLayout>
        </Border>

        <Button Text="ADD SMS" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnAddSmsClicked" AutomationId="add_sms_button" />
    </VerticalStackLayout>
</ContentView>
