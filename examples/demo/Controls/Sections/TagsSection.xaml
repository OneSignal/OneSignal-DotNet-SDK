<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OneSignalDemo.Controls.Sections.TagsSection">

    <VerticalStackLayout Spacing="8">
        <Grid ColumnDefinitions="*,Auto" Padding="4,0,0,0">
            <Label Grid.Column="0" Text="TAGS" Style="{StaticResource SectionHeaderStyle}" VerticalOptions="Center" />
            <ImageButton Grid.Column="1" Source="info" WidthRequest="20" HeightRequest="20"
                         BackgroundColor="Transparent" Clicked="OnInfoTapped" Padding="4" />
        </Grid>

        <Border Style="{StaticResource CardBorderStyle}">
            <VerticalStackLayout x:Name="TagListContainer" MinimumHeightRequest="50">
                <Label x:Name="EmptyLabel" Text="No tags added" Style="{StaticResource EmptyStateStyle}"
                       Padding="16" AutomationId="tags_empty_label" />
            </VerticalStackLayout>
        </Border>

        <Button Text="ADD" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnAddClicked" AutomationId="add_tag_button" />
        <Button Text="ADD MULTIPLE" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnAddMultipleClicked" AutomationId="add_multiple_tags_button" />
        <Button x:Name="RemoveSelectedButton" Text="REMOVE SELECTED" Style="{StaticResource PrimaryButtonStyle}"
                IsVisible="False" Clicked="OnRemoveSelectedClicked" AutomationId="remove_selected_tags_button" />
    </VerticalStackLayout>
</ContentView>
