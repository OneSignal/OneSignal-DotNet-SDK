<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OneSignalDemo.Controls.Sections.TrackEventSection">

    <VerticalStackLayout Spacing="8">
        <Grid ColumnDefinitions="*,Auto" Padding="4,0,0,0">
            <Label Grid.Column="0" Text="TRACK EVENT" Style="{StaticResource SectionHeaderStyle}" VerticalOptions="Center" />
            <ImageButton Grid.Column="1" Source="info" WidthRequest="20" HeightRequest="20"
                         BackgroundColor="Transparent" Clicked="OnInfoTapped" Padding="4" />
        </Grid>

        <Button Text="TRACK EVENT" Style="{StaticResource PrimaryButtonStyle}"
                Clicked="OnTrackEventClicked" AutomationId="track_event_button" />
    </VerticalStackLayout>
</ContentView>
